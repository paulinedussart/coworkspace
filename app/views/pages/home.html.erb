<section class="intro">
  <nav class="navbar nav-home">
    <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo-x2.png" %>
    <% end %>
    <form class="form-inline">
          <% if user_signed_in? %>
            <%= link_to "Manage your coworking space", owner_session_path, class: "btn-outline-primary" %>
            <button class="btn btn-outline-light mx-3" type="button">Manage your space</button>
            <button class="btn btn-outline-light mx-3" type="button">Find a space</button>
            <button class=" nav-item dropdown btn mx-3" type="button">
              <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path(:id), class: "dropdown-item" %>
            <%= link_to  "Settings", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
            </button>
         <% else %>
           <button class=" nav-item btn btn-outline-light mx-3" type="button">
           <%= link_to "Login", new_user_session_path, class: "nav-link" %>
           </button>
         <% end %>
    </form>
  </nav>


  <div class="header">
    <div class="title">
      <h1>COWORK SPACE </h1>
      <h2>Find the desk you deserve !</h2>
      <p>COWORK SPACE allows you to search coworking spaces around the world</p>

        <div class="form-wrapper" style="width: 200px">
    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :arrival_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :departure_date, as: :string, required: false, input_html: {class: "datepicker"}%>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Next destination ?"
    %>

      <%= f.button :submit, "Go", class: "btn-custom btn-lg btn-custom-gradient mt-4" %>
    <% end %>
    </div>

    </div>


</div>
