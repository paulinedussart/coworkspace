<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between <%= background %>" id="<%= id %>">
  <%= link_to "/", class: "navbar-brand" do %>
	  <div class="d-flex">
	    <div class="logoCoworkspace">
	      <%= image_tag "logo_coworkspace.svg" %>
	    </div>
	    <h2 class="name-site my-0">COWORKSPACE</h2>
	  </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">

      <% if user_signed_in? %>
	      <li>
					<%= link_to "Coworking", spaces_path, class: "btn-nav-link nav-link" %>
	      </li>
				<li>
	        <%= link_to "Bookings", user_reservations_path(current_user), class: "btn-nav-link nav-link" %>
				</li>
	     	<%= render partial: "shared/dropdown", current_user: current_user %>


			<% elsif owner_signed_in? %>
				<li class="nav-item active">
	      	<%= link_to "Coworking", spaces_path, class: "btn-nav-link nav-item mx-4" %>
	      </li>
	      <li class="nav-item">
       		<%= link_to "Manage your space", owner_dashboard_path(:id), class: "btn  btn-home-signin btn-outline-light mx-2" %>
	      </li>
				<li class="nav-item">
	        <%= link_to "Bookings", user_reservations_path(current_user), class: "btn-nav-link nav-item mx-4" %>
	      </li>
        <%= link_to "Log out", destroy_owner_session_path, method: :delete%>


      <% else %>
        <%= link_to "Coworking", spaces_path, class: "btn-nav-link nav-item mx-5" %>
        <%= link_to "Entreprise", new_owner_session_path, class: "btn-nav-link nav-item mx-5" %>
        <button class=" nav-item btn-nav-link-sign-in btn ml-5 mr-4" type="button">
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
        </button>
      <% end %>

    </ul>
  </div>
</div>