<div class="container">

  <h1>Spaces</h1>
  <% @spaces.each do |space|  %>
    <div class="card card-space" style="width: 18rem;">
  <!--     <img src="..." class="card-img-top" alt="..."> -->
        <div class="card-body">
          <h3 class="card-title"> <%= space.name %> </h3>
          <p class="card-text"> <%= space.address %> </p>
          <%= link_to "See details", space_path(space), class: "btn btn-primary"%>
        </div>
    </div>
  <% end  %>
  <div
    id="map"
    style="width: 600px;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>
