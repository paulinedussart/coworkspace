<div class="contour">

   <%= form_tag spaces_path, method: :get, class:"form-inline" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a space "%>
      <%= submit_tag 'Go!', class:"btn-custom btn-custom-gradient mx-2" %>
  <% end %>


  <div class="content-spaces d-flex">
    <div class="cards-spaces-container">
      <% @spaces.each do |space|  %>
        <div class="card card-space cloudinary">
      <!--     <img src="..." class="card-img-top" alt="..."> -->
          <%= cl_image_tag space.photo, width: 300, height: 200, crop: :fill, class: "img-fluid" %>
          <div class="card-body">
            <h4 class="card-title"> <%= space.name %></h4>
            <div class="card-reviews-price d-flex">
            <div class="card-reviews">
              <% if  space.reviews.empty? %>
              <p>No reviews yet</p>
              <% else %>
              <p><%= space.reviews.average(:rating) %>/5<i class="fas fa-star"></i></p>
              <% end %>
            </div>
            <div class="card-price">
              <p><%= humanized_money_with_symbol(space.desks.first.price_per_day) %> /day </p>
            </div>
          </div>
            <%= link_to "See details", space_path(space), class: "btn btn-outline-primary"%>
          </div>
        </div>
      <% end %>
    </div>
    <div
      id="map"
      style="width: 600px;
      height: 600px;
      margin-left: 15px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

